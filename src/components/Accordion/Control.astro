---
export interface Props {
  id: string;
  panelId: string;
}
const { id, panelId } = Astro.props;
---

<h3 slot="control">
  <button id={id} aria-controls={panelId} aria-expanded="false" type="button">
    <span>
      <slot />
    </span>
    <span class="icon" aria-hidden="true"></span>
  </button>
</h3>

<style>
  button span.icon {
    display: inline-grid;
    height: 12px;
    width: 12px;
    place-items: center;
    position: relative;
  }

  button span.icon::after,
  button span.icon::before {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    background-color: black;
    display: block;
    transition: transform 0.3s ease;
  }

  button span.icon::after {
    width: 100%;
    height: 2px;
  }

  button span.icon::before {
    width: 2px;
    height: 100%;
    margin: auto;
  }

  button[aria-expanded='true'] span.icon::before {
    transform: rotate(90deg);
  }
</style>
